<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:fillViewport="true"> <!-- Permet au ConstraintLayout de s'Ã©tirer si l'Ã©cran est grand -->

    <!-- Le ConstraintLayout est maintenant le contenu du ScrollView -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compteur Ã‰lectrique"
            android:textSize="26sp"
            android:textColor="#00FF00"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Connection Status -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statut: DÃ©connectÃ©"
            android:textSize="16sp"
            android:textColor="#FFAA00"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Device ID Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/deviceCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#2D2D2D"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/statusText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Identifiant Appareil"
                    android:textSize="12sp"
                    android:textColor="#888888"/>

                <TextView
                    android:id="@+id/deviceIdText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:#453687"
                    android:textSize="24sp"
                    android:textColor="#00AAFF"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Main Consumption Display -->
        <androidx.cardview.widget.CardView
            android:id="@+id/consumptionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#2D2D2D"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/deviceCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consommation Actuelle"
                    android:textSize="14sp"
                    android:textColor="#888888"/>

                <TextView
                    android:id="@+id/consumptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- kWh"
                    android:textSize="48sp"
                    android:textColor="#00FF00"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/lastUpdateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DerniÃ¨re MAJ: --:--:--"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- LCD Raw Data Display -->
        <androidx.cardview.widget.CardView
            android:id="@+id/lcdCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#2D2D2D"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/consumptionCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DonnÃ©es LCD Brutes:"
                    android:textSize="12sp"
                    android:textColor="#888888"/>

                <TextView
                    android:id="@+id/lcdDataText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="En attente de donnÃ©es..."
                    android:textSize="16sp"
                    android:textColor="#00FF00"
                    android:fontFamily="monospace"
                    android:layout_marginTop="8dp"
                    android:minHeight="40dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- ContrÃ´le des LED avec Switch -->
        <androidx.cardview.widget.CardView
            android:id="@+id/controlCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#2D2D2D"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/lcdCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ã‰teindre les LED (Switch ON)"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>

                <Switch
                    android:id="@+id/ledSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="#00FF00"
                    android:trackTint="#888888"
                    android:enabled="false"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Blockchain Status -->
        <androidx.cardview.widget.CardView
            android:id="@+id/blockchainCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#2D2D2D"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/controlCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”— Hedera Blockchain:"
                    android:textSize="14sp"
                    android:textColor="#888888"/>

                <TextView
                    android:id="@+id/blockchainStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PrÃªt Ã  envoyer"
                    android:textSize="14sp"
                    android:textColor="#00AAFF"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/blockchainCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/connectButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="CONNECTER"
                android:textStyle="bold"
                android:backgroundTint="#00AA00"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/disconnectButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="DÃ‰CONNECTER"
                android:textStyle="bold"
                android:backgroundTint="#AA0000"
                android:layout_marginStart="8dp"
                android:enabled="false"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
